{
    "name": "greatislander/hearth",
    "description": "Simple starter kit for the Laravel framework.",
    "keywords": [
        "fluid-project",
        "laravel",
        "hearth"
    ],
    "homepage": "https://github.com/greatislander/hearth",
    "license": "MIT",
    "authors": [
        {
            "name": "OCAD University",
            "email": "idrc@ocadu.ca",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "chinleung/laravel-locales": "^1.2",
        "chinleung/laravel-multilingual-routes": "^2.7",
        "illuminate/contracts": "^8.37",
        "laravel/fortify": "^1.7",
        "spatie/laravel-package-tools": "^1.4.3"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Hearth\\": "src",
            "Hearth\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hearth\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hearth\\HearthServiceProvider"
            ],
            "aliases": {
                "Hearth": "Hearth\\HearthFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
